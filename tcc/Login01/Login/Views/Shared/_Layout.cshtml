<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu projeto ASP.NET MVC</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Teste ITB", "Index", "Principal", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    <li class="nav-item-active">
                        @Html.ActionLink("Home","Index","Principal",new { area = "" },new { @class = "nav-link glyphicon glyphicon-home" })
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle glyphicon gliphicon-user" href="#" id="navbarDropdown"
                           role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Funcionário
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Listar", "Listar", "Principal", "", new { @class = "dropdown-item glyphicon glyphicon-list-alt" })
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Logar","Logar","Principal","",new { @class= "glyphicon glyphicon-log-in"})
                    </li>


                </ul>

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class=" panel-footer">
            <footer>
            <p>&copy; @DateTime.Now.Year - Bem vindo ao nosso sistema</p>
            <p>Para contato: fernando.professor.itb@gmail.com</p>
            </footer>
        </div>
        
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>