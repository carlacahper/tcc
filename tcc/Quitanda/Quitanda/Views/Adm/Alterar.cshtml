@model Quitanda.Models.Produto
@{
    ViewBag.Title = "Alterar";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container-fluid">

        <hr style="border-color: orange" />

        <h3 style="font-family:'Dosis', sans-serif; font-size: 36px; font-weight:bold">Alteração de Produtos</h3>

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Produto)

        <div class="form-group">

            @Html.LabelFor(model => model.Nome_Produto, htmlAttributes: new { @class = "control-label col-md-2" , @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome_Produto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome_Produto, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.Valor_Produto, htmlAttributes: new { @class = "control-label col-md-2" , @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Valor_Produto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Valor_Produto, "", new { @class = "text-danger" })

            </div>

        </div>


        <div class="form-group">

            @Html.LabelFor(model => model.Tamanho_Marmita, htmlAttributes: new { @class = "control-label col-md-2" , @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Tamanho_Marmita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tamanho_Marmita, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.Descrição_Produto, htmlAttributes: new { @class = "control-label col-md-2" , @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300"})

            <div class="col-md-10">
                @Html.EditorFor(model => model.Descrição_Produto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descrição_Produto, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label col-md-2" , @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300"})
            <div class="col-md-10">
                @Html.DropDownList("Categoria", new SelectList(ViewBag.categoria), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status_Produto, htmlAttributes: new { @class = "control-label col-md-2" , @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300"})
            <div class="col-md-10">
                @Html.DropDownList("Status_Produto", new SelectList(ViewBag.Status_Produto), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status_Produto, "", new { @class = "text-danger" })
            </div>
        </div>


        <br />

        <hr style="border-color: orange" />

        <br />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <button type="reset" class="btn btn-primary">Limpar</button>
                <button type="submit" class="btn btn-success">Alterar</button>

                <br />
                <hr style="border-color: orange" />
                <br />
                @Html.ActionLink("Página Principal", "Administrar", "Home", new { @class = "btn btn-primary" })
                @Html.ActionLink("Retornar a lista", "ListarProd", "", new { @class = "btn btn-success" })

            </div>
        </div>
    </div>
}


