            @Html.LabelFor(model => model.Email_login, htmlAttributes: new { @class = "control-label col-md-2",  @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300"  })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Email_login, new { htmlAttributes = new { @class = "form-control", @name= "Email", @id="Email",@type="text" } })
                @Html.ValidationMessageFor(model => model.Email_login, "", new { @class = "text-danger" })
            </div>

        </div>

        @Html.AntiForgeryToken()


        <div class="form-group">

            @Html.LabelFor(model => model.Senha_login, htmlAttributes: new { @class = "control-label col-md-2",  @style="font-family:'Dosis', sans-serif; font-size:14px; font-weight:300"  })

            <div class="col-md-10">
                @Html.PasswordFor(model => model.Senha_login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Senha_login, "", new { @class = "text-danger" })
            </div>

        </div>

    </div>

    <br />
 
    <hr style="border-color: orange" />

    <br />

    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">

            <button type="reset" class="btn btn-primary">Limpar</button>
            <button type="submit" class="btn btn-success">Cadastrar</button>

        </div>
    </div>

