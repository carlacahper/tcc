@{

    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string layout = "";

    if (controller == "Adm")
    {
        layout = "~/Views/Shared/_Layout2.cshtml";
    }

    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";

    }
    Layout = layout;
}